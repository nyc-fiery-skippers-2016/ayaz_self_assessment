<% if @errors %>
<ul>
	<% @errors.each do |error| %>
		<li><%= error %></li>
	<% end %>
</ul>
<% end %>

<form action="/login" method="post">
	<input type="text" name="user[email]" placeholder="Email Address">
	<input type="password" name="user[password]">
	<input type="submit" value="Login">
</form>